Vagrant.require_version "=2.2.9"

ansible_version   = "2.9.10"
ansible_verbose   = false
ansible_home      = "/home/vagrant/project/vm"

core_playbooks    = ["bootstrap","profile","facts","docker","k8s","gcloud","proxy","go","cli","git"]
config_playbooks  = ["profile","docker","k8s","gcloud","proxy","git"]
core_playbooks = []
config_playbooks = ["proxy"]

Vagrant.configure("2") do |config|

  config.vm.box = "hashicorp/bionic64"
  config.vm.box_version = "1.0.282"

  # Give more resources to the VM
  config.vm.provider "vmware_desktop" do |v|
    v.vmx["memsize"] = "4096"
    v.vmx["numvcpus"] = "4"
  end

  # Changes the default project sync dir
  config.vm.synced_folder ".", "/vagrant", disabled: true
  config.vm.synced_folder ".", "/home/vagrant/project"

  core_playbooks.each do |playbook|
    config.vm.provision "ansible_local" do |ansible|
      ansible.provisioning_path = "#{ansible_home}/core"
      ansible.version           = ansible_version
      ansible.verbose           = ansible_verbose
      ansible.playbook          = "#{playbook}.yml"
    end
  end

  config_playbooks.each do |playbook|
    config.vm.provision "ansible_local" do |ansible|
      ansible.provisioning_path = "#{ansible_home}/config"
      ansible.version           = ansible_version
      ansible.verbose           = ansible_verbose
      ansible.playbook          = "#{playbook}.yml"
    end
  end

  # copies the ssh keys
  config.vm.provision "file", source: "~/.ssh/id_rsa", destination: "~/.ssh/id_rsa"
  config.vm.provision "file", source: "~/.ssh/id_rsa.pub", destination: "~/.ssh/id_rsa.pub"

  # Postgres - enables debug from host to container inside VM
  config.vm.network "forwarded_port", guest: 5432, host: 5432

  # TODO: Remove if/when the issues are resolved with Octant
  # Octant - Provides visibility into the K8s cluster to help debugging
  config.vm.network "forwarded_port", guest: 7777, host: 7777

  # Add Caddy reverse proxy for entry point
  config.vm.network "forwarded_port", guest: 80, host: 80
  config.vm.network "forwarded_port", guest: 443, host: 443

end
