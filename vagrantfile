Vagrant.require_version "=2.2.9"

ansible_provisioning_path = "/home/vagrant"
ansible_version   = "2.9.10"
ansible_verbose   = false
# ansible_playbooks = ["bootstrap","facts","docker","microk8s","gcloud","go","cli","git"]
ansible_playbooks = ["git"]

Vagrant.configure("2") do |config|

  config.vm.box = "hashicorp/bionic64"
  config.vm.box_version = "1.0.282"

  # Give resources to the VM
  config.vm.provider "vmware_desktop" do |v|
    v.vmx["memsize"] = "4096"
    v.vmx["numvcpus"] = "4"
  end

  # changes the default sync
  config.vm.synced_folder ".", "/vagrant", disabled: true
  config.vm.synced_folder ".", "/home/vagrant/project"
  config.vm.synced_folder "./ansible/files", "/files", owner: "root", group: "root"

  # copies the default .git files
  config.vm.provision "file", source: "~/.gitconfig", destination: "~/.gitconfig", run: "always"
  config.vm.provision "file", source: "~/.gitignore_global", destination: "~/.gitignore_global", run: "always"
  
  ansible_playbooks.each do |playbook|
    config.vm.provision "ansible_local" do |ansible|
      ansible.provisioning_path = ansible_provisioning_path
      ansible.version           = ansible_version
      ansible.verbose           = ansible_verbose
      ansible.playbook          = "/home/vagrant/project/ansible/#{playbook}.yml"
    end
  end

  # Postgres - enables debug from host to container inside VM
  config.vm.network "forwarded_port", guest: 5432, host: 5432

end